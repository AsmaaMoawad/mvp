<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asmaa.mvp_momken2.Activity.Evoucher_centers_DateActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorLightBlue"
        android:layout_margin="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/ChangeFromDate"
            android:background="@drawable/icon_callender"
            />

        <TextView
            android:id="@+id/fromDate"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04/04/2018 "
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="من "
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@color/colorLightBlue"


        >
        <Button
            android:id="@+id/ChangeToDate"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@drawable/icon_callender"
            />

        <TextView
            android:id="@+id/toDate"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04/04/2018 "
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الى "
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />



    </LinearLayout>

    <Button
        android:id="@+id/SendDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="25dp"
        android:textColor="@color/cardview_light_background"
        android:layout_margin="10dp"
        android:background="@color/cardview_dark_background"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ارسال" />

</LinearLayout>
